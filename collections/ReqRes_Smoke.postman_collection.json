{
  "info": {
    "_postman_id": "11111111-aaaa-bbbb-cccc-111111111111",
    "name": "ReqRes_Smoke",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET - Products (Smoke)",
      "request": {
        "method": "GET",
        "auth": {
          "type": "bearer",
          "bearer": [
            { "key": "token", "value": "{{api_key}}", "type": "string" }
          ]
        },
        "url": "{{base_url}}/products"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "});",
              "",
              "pm.test('Response is JSON', function () {",
              "  pm.response.to.be.json;",
              "});",
              "",
              "const response = pm.response.json();",
              "pm.test('Products list is not empty', function () {",
              "  pm.expect(response.products).to.be.an('array').that.is.not.empty;",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET - Unauthorized (Smoke)",
      "request": {
        "method": "GET",
        "auth": { "type": "noauth" },
        "url": "{{base_url}}/auth/me"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Unauthorized access blocked', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([401, 403]);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}

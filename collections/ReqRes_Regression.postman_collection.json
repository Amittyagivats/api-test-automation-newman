{
  "info": {
    "_postman_id": "22222222-dddd-eeee-ffff-222222222222",
    "name": "ReqRes_Regression",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "POST – Create Product",
      "request": {
        "method": "POST",
        "auth": {
          "type": "bearer",
          "bearer": [{ "key": "token", "value": "{{api_key}}" }]
        },
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Regression Product\",\n  \"price\": 1000\n}"
        },
        "url": "{{base_url}}/products/add"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Product created', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
              "});",
              "",
              "const res = pm.response.json();",
              "pm.environment.set('product_id', res.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "PUT – Update Product",
      "request": {
        "method": "PUT",
        "url": "{{base_url}}/products/{{product_id}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('PUT update handled correctly', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "PATCH – Partial Update Product",
      "request": {
        "method": "PATCH",
        "url": "{{base_url}}/products/{{product_id}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('PATCH update handled correctly', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET – Product By ID",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/products/{{product_id}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('GET product handled correctly', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 404]);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "DELETE – Product",
      "request": {
        "method": "DELETE",
        "url": "{{base_url}}/products/{{product_id}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('DELETE handled correctly', function () {",
              "  pm.expect(pm.response.code).to.be.oneOf([200, 204, 404]);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}

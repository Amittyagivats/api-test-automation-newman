    {
      "name": "02_Positive_Tests",
      "item": [
        {
          "name": "GET - Products",
          "request": {
            "method": "GET",
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{api_key}}", "type": "string" }
              ]
            },
            "url": "{{base_url}}/products"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const data = pm.response.json();",
                  "",
                  "pm.test(\"Products list is not empty\", () => {",
                  "  pm.expect(data.products.length).to.be.above(0);",
                  "});",
                  "",
                  "pm.test(\"Each product has id, title, price\", () => {",
                  "  data.products.forEach(p => {",
                  "    pm.expect(p).to.have.property('id');",
                  "    pm.expect(p).to.have.property('title');",
                  "    pm.expect(p).to.have.property('price');",
                  "  });",
                  "});"
                ]
              }
            }
          ]
        },
        {
		"name": "POST – Create Product",
		"request": {
			"method": "POST",
			"auth": {
			"type": "bearer",
			"bearer": [
				{ "key": "token", "value": "{{api_key}}", "type": "string" }
			]
			},
			"header": [
			{ "key": "Content-Type", "value": "application/json" }
			],
			"body": {
			"mode": "raw",
			"raw": "{\n  \"title\": \"Postman Product\",\n  \"price\": 999\n}"
			},
			"url": "{{base_url}}/products/add"
		},
		"event": [
			{
			"listen": "test",
			"script": {
				"exec": [
				"pm.test(\"Product created\", () => {",
				"  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
				"});",
				"",
				"if (pm.response.code === 200 || pm.response.code === 201) {",
				"  const res = pm.response.json();",
				"  pm.environment.set(\"product_id\", res.id);",
				"}"
				]
			}
			}
		]
		},
        {
